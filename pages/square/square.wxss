/* pages/square/square.wxss */
@import "/pages/bottom_menu/bottom_menu";

.scbg{
  background-color: #ddd;
  width: 94%;
  padding: 2% 3% 110rpx 3%;
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.box{
  width: 100%;
  background-color: white;
  margin: 2% 0 2% 0;
  border-radius: 20rpx;
}

.firstblock{
  height: 130rpx;
  width: 92%;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}

.touxiang{
  margin-top: 20rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 15rpx;
}

.person{
  width: 75%;
  height: 130rpx;
  margin-left: 30rpx;
  margin-top: 10rpx;
}

.name{
  display: flex;
  justify-content: flex-start;
  margin-top: 15rpx;
  font-size: 40rpx;
  flex-direction: row;
}

.tel{
  display: flex;
  justify-content: flex-start;
  margin-top: 15rpx;
  flex-direction: row;
}

.showname{
  font-size: 34rpx;
  color: #bb5151;
  font-family: PingFangSC-regular;
}

.showtime{
  font-size: 28rpx;
  color: #aaa;
  font-family: PingFangSC-regular;
}

.secondblock{
  margin-top: 20rpx;
  margin-left: 8%;
  margin-right: 4%;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #BBBBBB;
}

.content{
  font-size: 30rpx;
  color: #101010;
  word-break: break-all;
  line-height: 45rpx;
}

.thirdblock{
  height: 100rpx;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  justify-content: flex-start;
}

.like{
  margin-top: 20rpx;
  margin-left: 20rpx;
  width: 50rpx;
  height: 50rpx;
}

.num{
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 25rpx;
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #101010;
}